                        <p>@Html.DisplayFor(modelItem => item.doctolibAdress)<br></p>
                        <p><a href="@Url.Action("DetailsDoc", "Admin", new { add = item.doctolibADD,  nom = item.doctolibNOM, spc = item.doctolibSPC })" class="btn_1 gray"><i class="fa fa-fw fa-user"></i> View profile</a></p>

                            
