@using WebEpione.Models
@model WebEpione.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="bg_color_2">
    <div class="container margin_60_35">
        <div id="login-2">
            <h1>Please login to Epione!</h1>

            @Html.ValidationSummary(true)

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {   @Html.AntiForgeryToken()
                <div class="box_form clearfix">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="box_login">
                        <a href="#0" class="social_bt facebook">Login with Facebook</a>
                        <a href="#0" class="social_bt google">Login with Google</a>
                        <a href="#0" class="social_bt linkedin">Login with Linkedin</a>
                    </div>
                    <div class="box_login last">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Email)<br />
                            @Html.TextBoxFor(x => x.Email,
                             new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Password)<br />
                            @Html.PasswordFor(x => x.Password,
                            new { htmlAttributes = new { @class = "form-control" } })

                            <p>
                                @Html.ActionLink("Forgot your password?", "ForgotPassword",
                             new { htmlAttributes = new { @class = "forgot" } })
                            </p>
                        </div>
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe,
                             new { htmlAttributes = new { @id = "check_2" } })
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        <div class="form-group">
                            <p><button type="submit" class="btn_1">Login</button></p>
                        </div>
                        <p>
                            @Html.ActionLink("Register as a new user", "Register",
                             new { htmlAttributes = new { @class = "text-center link_bright" } })
                        </p>

                    </div>
                </div>
            }

        </div>
        <!-- /login -->
    </div>
</div>
