@model IEnumerable<WebEpione.Models.PatientViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tabs_styled_2">
    <div class="tab-content">

        <div class="tab-pane fade show active" id="book" role="tabpanel" aria-labelledby="book-tab">
            <p class="lead add_bottom_30">All the patients.</p>

            <div class="main_title_3">
                <h3>Patients</h3>
            </div>
            <div class="form-group add_bottom_45">
                <table class="table">
                    <tr>
                        <th>
                           Avatar
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Profession)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CivilStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HomeAddress)
                        </th>
                      
                       
                        <th>
                            @Html.DisplayNameFor(model => model.Allergies)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SpecialReq)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegistrationDate)
                        </th>
                        <th>
                            Select
                        </th>
                       
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <figure>
                                    <img src="~/Content/img/avatarblue.png" alt="" class="img-fluid">
                                </figure>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.BirthDate).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Profession)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CivilStatus)
                            </td>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HomeAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Allergies)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SpecialReq)
                            </td>
                            <td>
                                @Convert.ToDateTime(item.RegistrationDate).ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                <h1><a href=@Url.Action("Index", "Treatment", new { id = item.Id })><i class="pe-7s-angle-right-circle"></i></a></h1>


                            </td>
                           
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


